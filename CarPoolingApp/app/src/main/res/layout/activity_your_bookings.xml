<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".YourBookings">

    <TextView
        android:id="@+id/bookingText2"
        android:layout_width="194dp"
        android:layout_height="82dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="49dp"
        android:text="Pickup Address: example Dropoff Address: example Preferred Time Frame: 1 hour Fair: $22"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yourBookingsText1" />

    <TextView
        android:id="@+id/bookingText"
        android:layout_width="221dp"
        android:layout_height="81dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="25dp"
        android:text="Pickup Address: example Dropoff Address: example Preferred Time Frame: 2 hours                                Fair: $10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bookingText2" />

    <TextView
        android:id="@+id/yourBookingsText1"
        android:layout_width="271dp"
        android:layout_height="63dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="52dp"
        android:text="Your Bookings:"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="16dp"
        android:text="Cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yourBookingsText1" />

    <Button
        android:id="@+id/button14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="17dp"
        android:text="Cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button13" />

    <Button
        android:id="@+id/button15"
        android:layout_width="277dp"
        android:layout_height="69dp"
        android:layout_marginStart="64dp"
        android:layout_marginBottom="40dp"
        android:text="home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginBottom="107dp"
        android:backgroundTint="#4CAF50"

        android:text="Simulate Booking is Confirmed by Driver"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/button15"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>